{
  "name": "doge-cool",
  "private": true,
  "repository": "https://github.com/cool-bots/doge-cool.git",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,js --exec 'ts-node' src/index.ts",
    "prettier": "prettier --write '**/*.{js,ts,tsx,json,md}'",
    "precommit": "pretty-quick --staged",
    "start": "sh app.sh"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "block_io": "2.0.0",
    "bottender": "0.14.34",
    "dotenv": "6.2.0",
    "lodash": "^4.17.15",
    "messaging-api-slack": "0.7.11",
    "ngrok": "3.1.1",
    "node-cron": "^2.0.3"
  },
  "devDependencies": {
    "@types/dotenv": "6.1.0",
    "husky": "1.3.1",
    "lint-staged": "8.0.3",
    "nodemon": "1.18.9",
    "prettier": "1.16.4",
    "ts-node": "8.0.2",
    "typescript": "3.3.1"
  }
}
